<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conf_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popupbg"
    android:elevation="10dp">

    <TextView
        android:id="@+id/popuptext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"

        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textCursorDrawable="@drawable/cursor_black"
        android:gravity="center"
        android:textSize="15dp"
        android:inputType="textPersonName"
        android:hint="Käyttäjänimi" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textCursorDrawable="@drawable/cursor_black"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:hint="Salasana"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="48dp"
        android:background="@android:color/transparent"
        android:minWidth="88dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textSize="13dp"
        android:text="@string/popupBtnYes"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/accept_button"
        android:height="48dp"
        android:background="@android:color/transparent"
        android:minWidth="88dp"
        android:text="@string/popupBtnNo"
        android:textColor="@color/colorPrimary"
        android:textSize="13dp" />


</RelativeLayout>